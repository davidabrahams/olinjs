<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Ingredients</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
</head>
<body>

    <table id="i_table" border="1">
        <tr>
            <th>Ingredient</th>
            <th>Price</th>
            <th></th>
        </tr>
        {{#each ingredients}}
            <tr>
                <td>{{name}}</td>
                <td>{{price}}</td>
                <td>
                    <button type="button" class="out_of_stock">Out of Stock</button>
                </td>

                <td>
                    <button type="button">Edit</button>
                </td>
            </tr>

        {{/each}}

    </table>

    <form id="add_form" action="postIngredients" method="POST">
        Name: <input type="text" name="name"/><br/>
        Price: $<input type="number" name="price" min="0.00" step="0.01" /> <br/>
        <input type="submit" value="Add">
    </form>

</body>
<script type="text/javascript" src="javascripts/ingredients.js"></script>
</html>
