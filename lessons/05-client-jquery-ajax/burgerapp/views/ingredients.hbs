<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Ingredients</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
</head>
<body>

    <table id="i_table">
        <tr>
            <th>Ingredient</th>
            <th>Price</th>
        </tr>
        {{#each ingredients}}
            <tr id={{this._id}}>
                {{#if in_stock}}
                    <td>{{name}}</td>
                    <td>{{price}}</td>
                    <td>
                        <button type="button" class="out_of_stock">Out of Stock</button>
                    </td>
                    <td>
                        <button type="button" class="edit_button">Edit</button>
                    </td>
                {{else}}
                    <td><del>{{name}}</del></td>
                    <td><del>{{price}}</del></td>
                    <td>
                        <button type="button" class="in_stock">In Stock</button>
                    </td>
                    <td>
                        <button type="button" class="edit_button">Edit</button>
                    </td>
                {{/if}}
            </tr>

        {{/each}}

    </table>

    <form id="add_form" action="postIngredients" method="POST">
        Name: <input type="text" name="name"/><br/>
        Price: $<input type="number" name="price" min="0.00" step="0.01" /> <br/>
        <input type="submit" value="Add">
    </form>

    <form id="edit_form" action="editIngredients" method="POST" hidden>
        Name: <input type="text" name="name"/><br/>
        Price: $<input type="number" name="price" min="0.00" step="0.01" /> <br/>
        <input type="hidden" id="selected"/>
        <input type="submit" value="Save">
        <input type="reset" value="Cancel">
    </form>

</body>

<script type="text/javascript" src="javascripts/ingredients.js"></script>

<script id="table-row-template" type="text/x-handlebars-template">
    <tr id={{this._id}}>
        {{#if in_stock}}
            <td>{{name}}</td>
            <td>{{price}}</td>
            <td>
                <button type="button" class="out_of_stock">Out of Stock</button>
        {{else}}
            <td><del>{{name}}</del></td>
            <td><del>{{price}}</del></td>
            <td>
                <button type="button" class="in_stock">In Stock</button>
            </td>
        {{/if}}
        <td>
            <button type="button" class="edit_button">Edit</button>
        </td>
    </tr>
</script>

</html>
